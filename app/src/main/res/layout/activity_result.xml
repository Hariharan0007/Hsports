<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/activity_result_table_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tbl_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Position"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/light_white"
                android:layout_margin="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chest Number"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/light_white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_margin="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Score"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/light_white"
                android:fontFamily="@font/montserrat_regular"
                android:layout_margin="10dp">
            </TextView>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/activity_result_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/activity_result_table_header">

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>