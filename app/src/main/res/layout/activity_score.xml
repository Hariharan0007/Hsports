<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/enter_data_bg">

    <TextView
        android:id="@+id/activity_score_game_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:text="GAME"
        android:elevation="2dp"
        android:background="@drawable/rounded_corner"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/activity_score_total_athletes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Athletes"
            android:layout_marginLeft="55dp"
            android:elevation="2dp"
            android:background="@drawable/rounded_corner"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center"

            android:padding="10dp"/>

        <TextView
            android:id="@+id/activity_score_total_rounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Rounds"
            android:elevation="2dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_corner"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_score_round"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:elevation="2dp"
        android:text="ROUND"
        android:background="@drawable/rounded_corner"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:layout_gravity="center"
        android:gravity="center"
        >
    </TextView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/score_card_view_chest_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Chest No"
                android:textSize="20sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/score_card_view_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_margin="20dp"
                android:hint="Score" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="center"

            >

            <Button
                android:id="@+id/activity_score_back"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:layout_gravity="center"
                android:backgroundTint="@color/light_white"
                android:text="back"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                app:cornerRadius="71dp"
                >

            </Button>

            <Button
                android:id="@+id/activity_score_save_and_next"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/light_white"
                android:text="save and next"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                app:cornerRadius="71dp"
                >

            </Button>





        </LinearLayout>

        <Button
            android:id="@+id/activity_score_submit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/btn_blue"
            android:fontFamily="@font/montserrat_regular"
            android:text="submit"
            android:textColor="@color/black"
            app:cornerRadius="71dp" />


    </LinearLayout>


</LinearLayout>