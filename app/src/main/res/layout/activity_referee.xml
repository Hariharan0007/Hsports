<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinEventTeam"
    android:background="@drawable/referee"
    >




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <Spinner

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_referee_gender_spinner"
                android:layout_gravity="center"
                android:layout_margin="120dp"
                />



            <TextView
                android:id="@+id/activity_referee_jump"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginTop="-80dp"
                android:text="JUMP"
                android:elevation="2dp"
                android:background="@drawable/rounded_corner"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_regular"
                android:backgroundTint="@color/green_shade"
                android:layout_gravity="center"
                android:gravity="center"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_referee_jump_recycler_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:listitem="@layout/card_view_" />


            <TextView
                android:id="@+id/activity_referee_throw"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:elevation="2dp"
                android:fontFamily="@font/montserrat_regular"
                android:background="@drawable/rounded_corner"
                android:text="THROW"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:backgroundTint="@color/green_shade"
                android:gravity="center"
                android:layout_gravity="center">
            </TextView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_referee_throw_recycler_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:listitem="@layout/card_view_" />


            <TextView
                android:id="@+id/activity_referee_track"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:elevation="2dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_corner"
                android:text="TRACK"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_regular"
                android:backgroundTint="@color/green_shade"
                android:gravity="center"
                android:layout_gravity="center"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_referee_track_recycler_view"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:listitem="@layout/card_view_" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>