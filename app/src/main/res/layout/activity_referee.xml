<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinEventTeam"
    android:background="@drawable/background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFEREE"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVENT LIST"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_regular"
        android:layout_gravity="center"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_referee_gender_spinner"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_referee_jump"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JUMP"
                android:textSize="25sp"
                android:background="@color/white"
                android:gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_referee_jump_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/card_view_" />

            <TextView
                android:id="@+id/activity_referee_throw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THROW"
                android:textSize="25sp"
                android:background="@color/white"
                android:gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_referee_throw_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/card_view_" />

            <TextView
                android:id="@+id/activity_referee_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRACK"
                android:textSize="25sp"
                android:background="@color/white"
                android:gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_referee_track_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/card_view_" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>